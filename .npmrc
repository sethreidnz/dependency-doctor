fund=false # Disable funding messages after installs
audit=false # Skip security audits during install (speeds up but removes warnings)
npm_config_loglevel=error # Only show error messages, suppress warnings/info
prefer-offline=true # Use local cache when possible to speed up installs
maxsockets=20 # Allow up to 20 concurrent downloads (default is 10)
prefer-dedupe=true # Reuse existing package versions to reduce conflicts
package-lock=true # Always respect package-lock.json for reproducible builds
engine-strict=true # Enforce Node.js version requirements from package.json
save=true # Automatically add installed packages to package.json
publish-config-access=restricted # Default to private when publishing packages